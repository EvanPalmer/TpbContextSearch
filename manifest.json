{   
	"manifest_version": 2, 
	"name": "Context Search TPB",   
	"version": "1.1.3",   
	"description": "Search TPB from the context menu.",
	"permissions": [
		"contextMenus",
		"tabs",
		"http://*.thepiratebay.se/",
		"http://thepiratebay.se/",
		"http://www.google.com.au/",
		"https://www.google.com.au/",
		"https://*/*",
		"http://*/*"
	],   
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"background": {
		"scripts": ["jquery-1.9.1.min.js", "doTheWork.js"],
		 "matches": ["http://*/*", "https://*/*"]
  	},
  	"content_scripts": [
    {
 	  "matches": ["http://*/*", "https://*/*"],
      "css": ["bootstrap/css/bootstrap.css"], 
      "js": ["jquery-1.9.1.min.js", "contentscript.js"]
    }
  ]
} 